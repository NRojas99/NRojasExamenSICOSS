@model ML.Usuario
@{
    ViewBag.Title = "Form";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<meta name="viewport" content="width=device-width" />
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2>Usuario</h2>
                            <h5> Ingrese los datos que se le solicita cada campo y presione el boton de agregar </h5>

                            @using (Html.BeginForm("Form", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-outline form-white mb-4">
                                    <div class="input-group w-30">
                                        @Html.LabelFor(model => model.IdUsuario, new { @style = "display: none" })
                                        @Html.TextBoxFor(model => model.IdUsuario, new { @style = "display: none", autocomplete = "off" })
                                        @Html.ValidationMessageFor(model => model.IdUsuario)
                                    </div>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <div class="input-group w-30">
                                        @Html.LabelFor(model => model.Username)

                                        <div class="input-group">
                                            <span class="input-group-addon" id="basic-addon1"></span>
                                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @id = "txtUserName" })
                                        </div>

                                        @Html.ValidationMessageFor(model => model.Username)
                                    </div>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <div class="input-group w-30">
                                        @Html.LabelFor(model => model.Password)

                                        <div class="input-group">
                                            <span class="input-group-addon" id="basic-addon1"></span>
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password", @id = "txtPassword", @on = "return ValidarPassword()", @autocomplete = "off" })
                                        </div>

                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <div class="input-group w-30">
                                        <label>Confirmar Contraseña</label>

                                        <div class="input-group">
                                            <span class="input-group-addon" id="basic-addon1"></span>
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password", @id = "txtConfirmarPassword", @onblur = "return ValidarPassword()", @autocomplete = "off" })
                                        </div>

                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>

                                <br />

                                <div class="col-md-12">
                                    <input type="submit" value="Guardar" class="btn btn-success" />
                                </div>
                                <br />
                                <div class="col-md-12">
                                    @*@Html.ActionLink("Regresar", "Login", "Login", htmlAttributes: new { @class = "btn btn-danger" })*@
                                    <a class="btn btn-danger" href="@Url.Action("Login", "Login")">Regresar</a>
                                </div>
                            }
                            <div>
                                <p class="mb-0">

                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
<script type="text/javascript">
    function ValidarPassword(e) {
        var txtPassword = $("#txtPassword").val();
        var txtConfirmarPassword = $("#txtConfirmarPassword").val();
        if (txtPassword == txtConfirmarPassword) {
            $("#txtConfirmarPassword").css("border-color", "green");
            return true;
        }
        else {
            $("#txtConfirmarPassword").css("border-color", "red");
            return false;
        }
    }
</script>
